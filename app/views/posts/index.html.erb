<div class="search-form">
<h1>検索</h1>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.select :keyword, [['ラーメン', 'ラーメン'], ['混ぜそば', '混ぜそば'], ['パスタ', 'パスタ'], ['焼きそば', '焼きそば'], ['うどん', 'うどん'], ['そば', 'そば'], ['その他', 'その他']], {include_blank: '選択してください'}, { class: "user_class" ,required: true } %>
    <%= f.submit "検索" %>
  <% end %>
  <%=link_to  posts_path do%>
   <button class="btn btn-secondary btn-lg" >リセット</button>
  <%end%>
</div>
<div class="contents">
<h1>投稿一覧</h1>
<% @posts.each do |post|%>
<%= image_tag post.image_url, class: 'card-img-top' %>
  <p>投稿者：<%= link_to  post.user.name, user_path(post.user)%></p>
 <p>店名：<span><%= post.shop %></span></p>
    <p>料理の種類：<span><%= post.food %></span></p>
    <p>商品名：<span><%= post.name %></span></p>
    <p>感想：<span><%= post.content %></span></p>
<% end %>
</div>